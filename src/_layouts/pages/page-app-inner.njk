---
layout: base
---

<div class="px-3 py-6 bg-purple-600 text-white">
  <p class="text-6xl font-semibold text-center">
    <a href="/{{ navApp }}/">{{ navAppName }}</a>
  </p>
</div>

<div class="flex">
  <div class="border-r flex-shrink-0 w-68 relative">
    <aside class="sticky h-screen top-0">
      {% include "blocks/sidebars/" + layoutLeftSidebar + ".njk" %}
    </aside>
  </div>
  <div class="mx-auto py-10 flex max-w-container">
    <main class="px-6 max-w-3/4">
      <h1 class="apl-page-title">{{ title }}</h1>
      <div class="mt-8 {{ 'prose prose-purple max-w-none' if layoutContentProse }}">
        {{ content | safe }}
      </div>
    </main>
    <div class="px-4 max-w-1/4">
      <aside class="border-l p-4 text-gray-500">
        {% include "blocks/sidebars/" + layoutRightSidebar + ".njk" %}
      </aside>
    </div>
  </div>
</div>
