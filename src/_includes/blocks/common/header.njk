{% macro headerNavItem(link, title, itemSection) %}
  <a class="inline-block px-4 py-1 {{ 'text-purple-600' if itemSection == topSection }} hover:text-purple-600 transition-colors duration-300" href="{{ link | url }}">{{ title }}</a>
{% endmacro %}

<header class="bg-gray-50 text-black">
{# <header class=""> #}
  <div class="apl-container max-w-screen-lg">
    {# <div class="border-b border-purple-400 py-6 sm:flex sm:items-center sm:justify-between"> #}
    <div class="py-4 sm:flex sm:items-center sm:justify-between">
      <a class="text-xl italic font-semibold tracking-widest" href="{{ '/' | url }}">
        <span class="font-bold">APP</span>LIBERATED
      </a>

      <nav class="font-medium">
        {{ headerNavItem("/", "Home", "home") }}
        {{ headerNavItem("/apps/", "Apps", "apps") }}
        {{ headerNavItem("/reviews/", "Reviews", "reviews") }}
        {{ headerNavItem("/support/", "Support", "support") }}
        {{ headerNavItem("/about/", "About", "about") }}
      </nav>

      {# <a href="/{{ navApp }}/donate/" class="apl-btn apl-btn-hero">Donate</a> #}
      <a href="/{{ navApp }}/donate/" class="apl-btn apl-btn-primary">Donate</a>
    </div>
  </div>
</header>
