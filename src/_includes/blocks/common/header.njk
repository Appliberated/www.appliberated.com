{% from "templates/buttons.njk" import iconButton %}

{% macro headerNavItem(link, title, itemSection) %}
  <a class="inline-block px-4 py-1.5 text-white text-opacity-75 {{ 'text-opacity-100 apl-header-nav-current' if itemSection == aplHeader.topSection }} hover:text-opacity-100 transition-colors duration-300" href="{{ link | url }}">{{ title }}</a>
{% endmacro %}

<header>
  <div class="apl-container max-w-screen-lg">
    <div class="pt-8 sm:flex sm:items-center sm:justify-between">
      <a href="{{ '/' | url }}">
        <img src="{{ 'branding/logo-header.svg' | imgurl }}" alt="Appliberated">
      </a>

      <nav class="font-medium">
        {{ headerNavItem("/", "Home", "home") }}
        {{ headerNavItem("/apps/", "Apps", "apps") }}
        {{ headerNavItem("/reviews/", "Reviews", "reviews") }}
        {{ headerNavItem("/contact/", "Contact", "contact") }}
        {{ headerNavItem("/about/", "About", "about") }}
      </nav>

      {{ iconButton("apl-btn-header", aplHeader.donateUrl if aplHeader.donateUrl else "/contribute/", "Donate", "heroicons-outline-heart", true, "space-x-2") }}
    </div>
  </div>
</header>
