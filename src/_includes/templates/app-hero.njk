{% from "templates/buttons.njk" import iconButton %}

<section>
  <div class="apl-container-lg py-18 grid grid-cols-12 items-center gap-x-20">
    <div class="col-span-5">
      <h1 class="text-3xl sm:text-4xl font-light">{{ aplHero.title }}</h1>
      <p class="mt-4 leading-loose tracking-semiwide">{{ aplHero.lead }}</p>
      <div class="mt-12">
        {{ iconButton("apl-btn-hero", aplHero.buttonUrl, aplHero.buttonCaption, aplHero.buttonIcon) }}
      </div>
    </div>
    <div class="col-span-7 p-8 rounded-lg bg-apl-purple-b71 bg-opacity-70">
        <img class="" alt="{{ aplHero.imageAlt }}" src="{{ aplHero.image | imgurl }}">
    </div>
  </div>
</section>