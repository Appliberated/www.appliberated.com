{% from "templates/buttons.njk" import iconButton %}

<div class="pt-16 pb-28 bg-gray-100">
  <div class="apl-container max-w-screen-lg flex flex-col sm:flex-row items-center justify-between sm:space-x-16">
    <h3 class="text-3xl font-bold tracking-tight text-gray-900">
      Donations are the only way <br class="hidden sm:block"><span class="text-purple-600">to maintain and support {{ aplBottomCTA.title }}</span>
    </h3>
    {% if aplBottomCTA.thankYou %}
      <div class="inline-flex items-center space-x-4">
        <span class="font-medium">Thank you!</span>
        {% set svgClasses = "h-4 w-4" %}
        {% include "assets/svg/heroicons-outline-heart.svg" %}
      </div>
    {% else %}
      {{ iconButton("apl-btn-primary", aplBottomCTA.url, "Donate Now", "heroicons-outline-heart", true) }}
    {% endif %}
  </div>
</div>
